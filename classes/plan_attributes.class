include_once "db.class";
include_once "config.class";
include_once "validate.class";
include_once "audit.class";

class plan_attributes {

  var $plan_id;
  var $param;
  var $value;
  var $datetime;
  
  var $db;
  var $server_name;
  var $database_name;
  var $user_name;
  var $user_password;


  /* function plan_attributes() 
  **
  ** DESCRIPTION: Class constructor, initalizes and sets up DB connectoin
  **
  ** PARAMETERS:
  **
  ** RETURNS:
  ** 
  */
  function plan_attributes() { 
    
	
    $config = new config();
    
    $this->server_name = $config->mysql_server_name;
    $this->database_name = $config->mysql_database_name;
    $this->user_name = $config->mysql_user_name;
    $this->user_password = $config->mysql_user_password;

    $this->db = new db($this->server_name, $this->database_name, $this->user_name, $this->user_password);
    
  }

  /* function load()
  **
  ** DESCRIPTION: loads data from table
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 1 - sucess
  ** 0 - fail
  ** 
  */
  function load() {

    $this->plan_id = strtoupper($this->plan_id);

    if (!$this->plan_id) {
    
      return 0;
      
    }
  
    if ($this->plan_id) {
      
      $query = "SELECT * FROM plan_attributes WHERE plan_id = " . $this->db->quote($this->plan_id);
      $result = $this->db->execute_query($query);
      
      if ($result != 0 ) {

        $row = $this->db->fetch_row_array($result);
        while ($cel = each($row)) {

          $key = $cel['key'];
          
          $this->{$key} = $cel['value'];
          
        }
      }    
    }


    return 0;
    
  }

  /* function exist()
  **
  ** DESCRIPTION: checks to see if an id exists
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 1 - service_type exists
  ** 0 - service_type does not exist
  ** 
  */
  function exist() {
  
    $this->plan_id = strtolower($this->plan_id);
  
    // Check we have an user
    if (!$this->plan_id) {
    
      return 0;
      
    }

    if (!$this->param) {
    
      return 0;
      
    }

    $query = "SELECT * FROM plan_attributes WHERE plan_id = " . $this->db->quote($this->plan_id) . " AND param = " . $this->db->quote($this->param) . " AND value = " . $this->db->quote($this->value) . " ORDER BY datetime DESC LIMIT 1";
    $result = $this->db->execute_query($query);
    
    if ($result != 0 ) {
    
      $row_count = $this->db->fetch_row_count($result);
      if ($row_count == 1) {
      
        return 1;
        
      } else {
      

        return 0;
        
      }
      
    }
    
    return 0;
  
    
  }



  /* function create()
  **
  ** DESCRIPTION: creates a new entry
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 1 - sucess
  ** 0 - fail
  ** 
  */
  function create_real() {
  
    // Validate
    if (plan_attributes::validate()) {
    
      return 0;
      
    }

    // Create the property search
    $query = "INSERT INTO plan_attributes (plan_id, param, value, datetime)";
    $query .= " VALUES (" . $this->db->quote($this->plan_id) . "," . $this->db->quote($this->param) . "," . $this->db->quote($this->value) . ",NOW())";

    $result = $this->db->execute_query($query);
    
    if ($result == 0) {
      return 0;
      
    } else {

        $audit = new audit();
        $audit->plan_id = $this->plan_id;
        $audit->param = $this->param;
        $audit->value = $this->value;
        $audit->store_changes_pa();

      return 1;
          
    }
  }
  
  function create() {
    if ($this->create_real() == 1) {

      $this->load();
    
      return 1;
      
    } else {
    
      return 0;
      
    }    
      
  }

/* function save_real()
  **
  ** DESCRIPTION: saves current data into an already existant entry
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 1 - sucess
  ** 0 - fail
  ** 
  */
  function save_real() {
    // Validate
    if (plan_attributes::validate()) {
    
      return 0;
      
    }

    // Check if id exists    
    if (!plan_attributes::exist()) {
      return 0;
      
    }

    $query = "UPDATE plan_attributes SET value = " . $this->db->quote($this->value);
    $query .= " WHERE plan_id = " . $this->db->quote($this->plan_id) . " AND param = " . $this->db->quote($this->param);
    
    $result = $this->db->execute_query($query);

    if ($result == 0) {

      return 0;
      
    } else {

      return 1;
        
    }
  }

  function save() {
  
    if ($this->save_real() == 1) {

      $this->load();
    
      return 1;
      
    } else {
    
      return 0;
      
    }    
      
  }

  /* function delete()
  **
  ** DESCRIPTION: Deletes an entry
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 1 - sucess
  ** 0 - fail
  ** 
  */
  function delete() {
  
    $this->load();
    
    if (!$this->exist()) {
    
      return 0;
      
    }
    
    // Prepare the query
    $query = "DELETE FROM plan_attributes WHERE plan_id = " . $this->db->quote($this->plan_id);
    $result = $this->db->execute_query($query);
    
    if ($result == 0) {
    
      return 0;
      
    } else {

    return 1;
    }
  }

  /* function validate()
  **
  ** DESCRIPTION: validates data currently stored in variables
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 0 - sucess
  ** 
  */
  function validate() {

    if ( !$this->plan_id ) {

      return 160;

    }
    
    if ( !$this->param ) {

      return 161;

    }
    
    // ALL OK
    return 0;
    
  }

   /* function get_plan_attributes()
  **
  ** DESCRIPTION: loads data from table
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** - array of plan attributes with correpsonding details
  ** 
  */

  function get_plan_attributes(){

      $a = array();
      
      $query = "SELECT * FROM plan_attributes WHERE plan_id = " . $this->db->quote($this->plan_id);
      $result = $this->db->execute_query($query);

      if ($result != 0 ) {

        while($row = $this->db->fetch_row_array($result)) {
          $a[] = $row;
        }
      }

    return $a;

  }

   /* function get_latest()
  **
  ** DESCRIPTION: loads data from table
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** - latest attibute of a plan
  ** 
  */

  function get_latest(){

    if ( !$this->plan_id ) {

      return 0;

    }

    if ( !$this->param ) {

      return 0;

    }

    if ( $this->plan_id ) {
      
        $query = "SELECT * FROM plan_attributes WHERE plan_id = " . $this->db->quote($this->plan_id) . " AND param = " . $this->db->quote($this->param) . " ORDER BY datetime DESC LIMIT 1";
        $result = $this->db->execute_query($query);

        $row = $this->db->fetch_row_array($result);
        
        if(is_array($row)){
          while ($cel = each($row)) {

            $key = $cel['key'];
            
            $this->{$key} = $cel['value'];
            
          }
        }

      return 0;
    }

  }

}

