include_once "db.class";
include_once "config.class";
include_once "validate.class";
include_once "misc.class";
include_once "user.class";

class calls {
  
  var $db;
  var $server_name;
  var $database_name;
  var $user_name;
  var $user_password;

  var $ir_id;
  var $description;
  var $type_id;
  var $sub_type;
  var $wholesaler_id;
  var $active;
  var $master_international_list;


  /* function calls() 
  **
  ** DESCRIPTION: Class constructor, initalizes and sets up DB connectoin
  **
  ** PARAMETERS:
  **
  ** RETURNS:
  ** 
  */
  function calls() { 
    
	
    $config = new config();
    
    $this->server_name = $config->mysql_server_name;
    $this->database_name = $config->mysql_database_name;
    $this->user_name = $config->mysql_user_name;
    $this->user_password = $config->mysql_user_password;

    $this->active = 'yes';

    $this->db = new db($this->server_name, $this->database_name, $this->user_name, $this->user_password);
    
  }

  /* function load()
  **
  ** DESCRIPTION: loads data from table
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 1 - sucess
  ** 0 - fail
  ** 
  */
  function load() {

    $this->ir_id = strtoupper($this->ir_id);
    if (!$this->ir_id) {
    
      return 0;
      
    }
  
    if ($this->ir_id) {
      
      $query = "SELECT * FROM calls WHERE ir_id = " . $this->db->quote($this->ir_id);
      $result = $this->db->execute_query($query);
      if ($result != 0 ) {

        $row = $this->db->fetch_row_array($result);
         if ( $row ) { 
          while ($cel = each($row)) {

            $key = $cel['key'];
            
            $this->{$key} = $cel['value'];
          }
        }
      }    
    }

    return 0;
    
  }

  /* function exist()
  **
  ** DESCRIPTION: checks to see if an id exists
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 1 - service_type exists
  ** 0 - service_type does not exist
  ** 
  */
  function exist() {
  
    // Check we have an user
    if (!$this->ir_id) {
    
      return 0;
      
    }
    
    $query = "SELECT ir_id FROM calls WHERE ir_id = " . $this->db->quote($this->ir_id);
    $result = $this->db->execute_query($query);
      
    if ($result != 0 ) {
    
      $row_count = $this->db->fetch_row_count($result);
      
      if ($row_count == 1) {
      
        return 1;
        
      } else {
      
        return 0;
        
      }
      
    }
    
    return 0;
  
    
  }



  /* function create()
  **
  ** DESCRIPTION: creates a new entry
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 1 - sucess
  ** 0 - fail
  ** 
  */
  function create_real() {
  
    // Validate
    if (calls::validate()) {
    
      return 0;
      
    }


    $calls = new calls();

    // Create the property search
    $query = "INSERT INTO calls (description, type_id, sub_type, wholesaler_id, master_international_list, active)";
    $query .= " VALUES (" . $this->db->quote($this->description) . "," . $this->db->quote($this->type_id) . "," . $this->db->quote($this->sub_type) . "," . $this->db->quote($this->wholesaler_id) . "," . $this->db->quote($this->master_international_list) . "," . $this->db->quote($this->active) . ")";

    $result = $this->db->execute_query($query);
    
    if ($result == 0) {
      return 0;
      
    } else {

      $this->load();
      
      //Audit section for storing first changes
        $temp = get_object_vars($this);
        unset($temp['db']);
        unset($temp["server_name"]);
        unset($temp["database_name"]);
        unset($temp["user_name"]);
        unset($temp["user_password"]);
        $keys = array_keys($temp);

        $changes = new audit();
        $changes->store_first_changes($keys,$this,"calls",$this->ir_id);

      return 1;
          
    }
  }
  
  function create() {
    if ($this->create_real() == 1) {

      $this->load();
    
      return 1;
      
    } else {
    
      return 0;
      
    }    
      
  }

  /* function save_real()
  **
  ** DESCRIPTION: saves current data into an already existant entry
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 1 - sucess
  ** 0 - fail
  ** 
  */
  function save_real() {
  
    // Validate
    if (calls::validate()) {
    
      return 0;
      
    }

    // Check if id exists    
    if (!calls::exist()) {
      return 0;
      
    }

      $previous = new calls();
      $previous->ir_id = $this->ir_id;
      $previous->load();
    
    $query = "UPDATE calls SET description = " . $this->db->quote($this->description) . ", type_id = " . $this->db->quote($this->type_id) . ", sub_type = " . $this->db->quote($this->sub_type) . ", wholesaler_id = " . $this->db->quote($this->wholesaler_id) . ", master_international_list = " . $this->db->quote($this->master_international_list) . ", active = " . $this->db->quote($this->active);
    $query .= " WHERE ir_id = " . $this->db->quote($this->ir_id);
    $result = $this->db->execute_query($query);
    
    if ($result == 0) {

      return 0;
      
    } else {

        //Audit section for storing first changes
        $temp = get_object_vars($this);

        unset($temp['db']);
        unset($temp["server_name"]);
        unset($temp["database_name"]);
        unset($temp["user_name"]);
        unset($temp["user_password"]);
        $keys = array_keys($temp);
        
        $changes = new audit();
        $changes->store_changes($keys,$previous,$this,"calls",$this->ir_id);

      return 1;
        
    }
  }

  function save() {
  
    if ($this->save_real() == 1) {

      $this->load();
    
      return 1;
      
    } else {
    
      return 0;
      
    }    
      
  }

  /* function validate()
  **
  ** DESCRIPTION: validates data currently stored in variables
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 0 - sucess
  ** 
  */
  function validate() {

    if ( !$this->description ) {
      return 170;
    }

    if ( !$this->type_id ) {
      return 141;
    }

    if ( !$this->sub_type ) {
      return 172;
    }

    if (!$this->wholesaler_id ) {
      return 100;
    }
    
    // ALL OK
    return 0;
    
  }

   /* function get_my_irc()
  **
  ** DESCRIPTION: loads data from table
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** - array of services with correpsonding details
  ** 
  */

  function get_my_irc(){
      $a = array();
      if ( !$this->wholesaler_id ) {
        return 0;
      }

      $query = "SELECT * FROM calls WHERE wholesaler_id=" . $this->db->quote($this->wholesaler_id);

      $result = $this->db->execute_query($query);
      
      if ($result != 0 ) {

        while($row = $this->db->fetch_row_array($result)) {
          $a[] = $row;
        }
      }

    return $a;

  }

   /* function delete()
  **
  ** DESCRIPTION: loads data from table
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** - array of services with correpsonding details
  ** 
  */

  function delete(){

    // Prepare the query
    $query = "DELETE FROM calls WHERE ir_id = " . $this->db->quote($this->ir_id);
    $result = $this->db->execute_query($query);
    
    if ($result == 0) {
    
      return 0;
      
    } else {

    return 1;
    }

  }

   /* function get_countries()
  **
  ** DESCRIPTION: loads data from table
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** - array of services with correpsonding details
  ** 
  */

  function get_countries(){
      $a = array();

      $query = "SELECT * FROM international_rate ORDER BY destination_name";

      $result = $this->db->execute_query($query);
      
      if ($result != 0 ) {

        while($row = $this->db->fetch_row_array($result)) {
          $a[] = $row;
        }
      }

    return $a;

  }

   /* function get_cards()
  **
  ** DESCRIPTION: loads data from table
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** - array of services with correpsonding details
  ** 
  */

  function get_cards(){
      $a = array();

      $query = "SELECT * FROM calls";

      $query .= " WHERE type_id = " . $this->db->quote($this->type_id);
      if ( !empty($this->sub_type) ) {

        //get sub_type key
        if (strpos($this->sub_type,'isdn') !== false) {
            $this->sub_type = 'ISDN';
        }

        if ( $this->sub_type == '13' || $this->sub_type == '1300' || $this->sub_type == '13' ) {
          $this->sub_type = 'inbound';
        }

        $query .= " AND sub_type LIKE " . strtolower($this->db->quote("%".$this->sub_type."%"));
      }
      $query .= " AND wholesaler_id = " . $this->db->quote($this->wholesaler_id);
      $query .= " AND master_international_list = " . $this->db->quote($this->master_international_list);
      $query .= " AND active = 'yes'";
      
      $result = $this->db->execute_query($query);
      
      if ($result != 0 ) {

        while($row = $this->db->fetch_row_array($result)) {
          $a[] = $row;
        }
      }

    return $a;

  }

   /* function calls_list()
  **
  ** DESCRIPTION: loads data from table
  **
  ** PARAMETERS:
  ** - array
  **
  ** RETURNS:
  ** - String
  ** 
  */

  function calls_list( $name, $array ){
      
    $list = '<select name="' . $name . '" id="' . $name . '">'; 
    $list .= '<option value="0">Select International Rate Card</option>';

    if ($array) {
      for ( $x = 0; $x < count($array); $x++ ) {
        if( $array[$x]["active"] == "yes" ){
          $list .= "<option value='" . $array[$x]["ir_id"] . "' {CARD_". $array[$x]["ir_id"] ."_SELECT}>" . $array[$x]["description"] . "</option>";
        }
      }
    }
      $list .= '</select>';

      return $list; 

  }

   /* function get_master_list()
  **
  ** DESCRIPTION: loads data from table
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** - array of services with correpsonding details
  ** 
  */

  function get_master_list(){
      $a = array();

      $query = "SELECT * FROM calls WHERE wholesaler_id = '1' AND type_id = " . $this->db->quote($this->type_id) . " AND sub_type = " . $this->db->quote($this->sub_type);

      $result = $this->db->execute_query($query);
      
      if ($result != 0 ) {

        while($row = $this->db->fetch_row_array($result)) {
          $a[] = $row;
        }
      }

    return $a;

  }

}

