  **
  ** RETURNS:
  ** 1 - sucess
  ** 0 - fail
  ** 
  */
  function load() {

    $this->group_id = strtoupper($this->group_id);

    if (!$this->group_id) {
    
      return 0;
      
    }
  
    if ($this->group_id) {
      
      $query = "SELECT * FROM wholesaler_plan_groups WHERE group_id = " . $this->db->quote($this->group_id) . " AND wholeslaer_id = " . $this->db->quote($this->wholesaler_id);
      $result = $this->db->execute_query($query);

      if ($result != 0 ) {

        $row = $this->db->fetch_row_array($result);
        if ( $row ) {
          while ($cel = each($row)) { 

            $key = $cel['key'];
            
            $this->{$key} = $cel['value'];
            
          }
        }
      }    
    }


    return 0;
    
  }

