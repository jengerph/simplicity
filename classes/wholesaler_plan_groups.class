    if (!$this->group_id) {
    
      return 0;
      
    }
    
    $query = "SELECT group_id FROM wholesaler_plan_groups WHERE group_id = " . $this->db->quote($this->group_id) . " AND wholesaler_id = " . $this->db->quote($this->wholesaler_id);
    $result = $this->db->execute_query($query);
      
