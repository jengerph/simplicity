include_once "db.class";
include_once "config.class";
include_once "validate.class";
include_once "audit.class";

class radius_reply {
  
  var $id;
  var $username;
  var $attribute;
  var $op;
  var $value;

  var $db;
  var $server_name;
  var $database_name;
  var $user_name;
  var $user_password;


  /* function radius_reply() 
  **
  ** DESCRIPTION: Class constructor, initalizes and sets up DB connectoin
  **
  ** PARAMETERS:
  **
  ** RETURNS:
  ** 
  */
  function radius_reply() { 
    
  
    $config = new config();
    
    $this->server_name = $config->mysql_server_name;
    $this->database_name = $config->mysql_database_name;
    $this->user_name = $config->mysql_user_name;
    $this->user_password = $config->mysql_user_password;

    $this->db = new db($this->server_name, $this->database_name, $this->user_name, $this->user_password);
    
    $this->op = ':=';
    
  }

  /* function load()
  **
  ** DESCRIPTION: loads data from table
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 1 - sucess
  ** 0 - fail
  ** 
  */
  function load() {

    $this->id = strtoupper($this->id);
    if (!$this->id) {
    
      return 0;
      
    }
  
    if ($this->id) {
      
      $query = "SELECT * FROM radius.radreply WHERE id = " . $this->db->quote($this->id);
      $result = $this->db->execute_query($query);
      if ($result != 0 ) {

        $row = $this->db->fetch_row_array($result);
         if ( $row ) { 
          while ($cel = each($row)) {

            $key = $cel['key'];
            
            $this->{$key} = $cel['value'];
          }
        }
      }    
    }

    return 0;
    
  }

  /* function exist()
  **
  ** DESCRIPTION: checks to see if an id exists
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 1 - service_type exists
  ** 0 - service_type does not exist
  ** 
  */
  function exist() {
  
    $this->id = strtolower($this->id);
  
    // Check we have an static ip
    if (!$this->ip) {
    
      return 0;
      
    }
    
    $query = "SELECT id FROM radius.radreply WHERE id = " . $this->db->quote($this->id);
    $result = $this->db->execute_query($query);
      
    if ($result != 0 ) {
    
      $row_count = $this->db->fetch_row_count($result);
      
      if ($row_count == 1) {
      
        return 1;
        
      } else {
      	
        return 0;
        
      }
      
    }
    
    return 0;
  
    
  }



  /* function create()
  **
  ** DESCRIPTION: creates a new entry
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 1 - sucess
  ** 0 - fail
  ** 
  */
  function create_real() {
  
    // Validate
    if (radius_reply::validate()) {
    
      return 0;
      
    }

    $service = new services();

    // Create the property search
    $query = "INSERT INTO radius.radreply (username, attribute, op, value)";
    $query .= " VALUES (" . $this->db->quote($this->username) . "," . $this->db->quote($this->attribute) . "," . $this->db->quote($this->op) . "," . $this->db->quote($this->value) . ")";

    $result = $this->db->execute_query($query);
    
    if ($result == 0) {
      return 0;
      
    } else {

      $this->id = $this->db->fetch_insert_id();

      $this->load();
      
      //Audit section for storing first changes
        $temp = get_object_vars($this);

        unset($temp['db']);
        unset($temp["server_name"]);
        unset($temp["database_name"]);
        unset($temp["user_name"]);
        unset($temp["user_password"]);
        $keys = array_keys($temp);
        
        $changes = new audit();
        $changes->store_first_changes($keys,$this,"radreply",$this->ip);

      return 1;
          
    }
  }
  
  function create() {
    if ($this->create_real() == 1) {

      $this->load();
    
      return 1;
      
    } else {
    
      return 0;
      
    }    
      
  }

  /* function save_real()
  **
  ** DESCRIPTION: saves current data into an already existant entry
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 1 - sucess
  ** 0 - fail
  ** 
  */
  function save_real() {
  
    // Validate
    if (radius_reply::validate()) {
    
      return 0;
      
    }

    // Check if id exists    
    if (!radius_reply::exist()) {
      return 0;
      
    }
    $query = "UPDATE radius.radius_reply SET op = " . $this->db->quote($this->op) . ', value = ' . $this->db->quote($this->value);
    $query .= " WHERE id = " . $this->db->quote($this->id);
    $result = $this->db->execute_query($query);

    if ($result == 0) {

      return 0;
      
    } else {

      //Audit section for storing first changes
        $temp = get_object_vars($this);

        unset($temp['db']);
        unset($temp["server_name"]);
        unset($temp["database_name"]);
        unset($temp["user_name"]);
        unset($temp["user_password"]);
        $keys = array_keys($temp);
        
        $changes = new audit();
        $changes->store_changes($keys,$service,$this,"radreply",$this->ip);

      return 1;
        
    }
  }

  function save() {
  
    if ($this->save_real() == 1) {

      $this->load();
    
      return 1;
      
    } else {
    
      return 0;
      
    }    
      
  }

