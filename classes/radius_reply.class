   /* function get_next_free_ip()
  **
  ** DESCRIPTION: loads data from table
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** - array of services with correpsonding details
  ** 
  */

  function get_attributes($username, $attribute = ''){

    $query = "SELECT id FROM radius.radreply WHERE username = " . $this->db->quote($username);
    
    if ($attribute != '') {
    	$query .= ' AND attribute = ' . $this->db->quote($attribute);
    }
    $query .= ' ORDER BY attribute';
    
    $result = $this->db->execute_query($query);
    
    $arr = array();
    if ($result != 0 ) {

      while ($row = $this->db->fetch_row_array($result)) {
      	
      	$arr[] = $row['id'];
      }
    }

    return $arr;

  }

  /* function delete()
  **
  ** DESCRIPTION: Deletes an entry
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 1 - sucess
  ** 0 - fail
  ** 
  */
  function delete() {
  
    $this->load();
    
    if (!$this->exist()) {
    
      return 0;
      
    }
    
    // Prepare the query
    $query = "DELETE FROM radius.radreply WHERE id = " . $this->db->quote($this->id);
    $result = $this->db->execute_query($query);
    
    if ($result == 0) {
    
      return 0;
      
    } else {

    	return 1;
    }
  }


}

