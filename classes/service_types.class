   /* function service_list()
  **
  ** DESCRIPTION: loads data from table
  **
  ** PARAMETERS:
  ** - array
  **
  ** RETURNS:
  ** - String
  ** 
  */

  function service_list( $name, $array ){
      
    $list = '<select name="' . $name . '" id="' . $name . '" onchange="form.submit.click();">'; 
    $list .= '<option value="0">Add a Service</option>';

    if ($array) {
      for ( $x = 0; $x < count($array); $x++ ) {
        if( $array[$x]["active"] == "yes" && $array[$x]["type_id"] != 7 ){
          $list .= "<option value='" . $array[$x]["type_id"] . "' {ST_". $array[$x]["type_id"] ."_SELECT}>" . $array[$x]["description"] . "</option>";
        }
      }

      $list .= '</select>';

    }

      return $list; 

  }

