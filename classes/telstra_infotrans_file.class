class telstra_infotrans_file {

  var $file_seq;
  var $creation;

  
  var $db;
  var $server_name;
  var $database_name;
  var $user_name;
  var $user_password;


  /* function telstra_infotrans_files() 
  **
  ** DESCRIPTION: Class constructor, initalizes and sets up DB connectoin
  **
  ** PARAMETERS:
  **
  ** RETURNS:
  ** 
  */
  function telstra_infotrans_file() { 
    
	
    $config = new config();
    
    $this->server_name = $config->mysql_server_name;
    $this->database_name = $config->mysql_database_name;
    $this->user_name = $config->mysql_user_name;
    $this->user_password = $config->mysql_user_password;

    $this->db = new db($this->server_name, $this->database_name, $this->user_name, $this->user_password);
    
  }

  /* function load()
  **
  ** DESCRIPTION: loads data from table
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 1 - sucess
  ** 0 - fail
  ** 
  */
  function load() {

    $this->file_seq = strtoupper($this->file_seq);

    if (!$this->file_seq) {
    
      return 0;
      
    }
  
    if ($this->file_seq) {
      
      $query = "SELECT * FROM telstra_infotrans_files WHERE file_seq = " . $this->db->quote($this->file_seq);
      $result = $this->db->execute_query($query);

      if ($result != 0 ) {

        $row = $this->db->fetch_row_array($result);
        if ($row) {
          while ($cel = each($row)) {

            $key = $cel['key'];
            
            $this->{$key} = $cel['value'];
            
          }
        }
      }    
    }


    return 0;
    
  }

  /* function exist()
  **
  ** DESCRIPTION: checks to see if an id exists
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 1 - user exists
  ** 0 - user does not exist
  ** 
  */
  function exist() {
  
    $this->file_seq = strtoupper($this->file_seq);
  
    // Check we have an customer_id
    if (!$this->file_seq) {
    
      return 0;
      
    }
    
    $query = "SELECT file_seq FROM telstra_infotrans_files WHERE file_seq = " . $this->db->quote($this->file_seq);
    $result = $this->db->execute_query($query);
      
    if ($result != 0 ) {
    
      $row_count = $this->db->fetch_row_count($result);
      
      if ($row_count == 1) {
      
        return 1;
        
      } else {
      
        return 0;
        
      }
      
    }
    
    return 0;
  
    
  }



  /* function create()
  **
  ** DESCRIPTION: creates a new entry
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 1 - sucess
  ** 0 - fail
  ** 
  */
  function create_real() {

    // Create the account
    $query = "INSERT INTO telstra_infotrans_files (file_seq, creation)";
    $query .= " VALUES (" . $this->db->quote($this->file_seq) . ", " . $this->db->quote($this->creation). ")";
  
    $result = $this->db->execute_query($query);
  
    if ($result == 0) {
      return 0;
      
    } else {
    
      //$this->customer_id = $this->db->fetch_insert_id();

      $this->load();


      return 1;
          
    }
  }
  
  function create() {
  
    if ($this->create_real() == 1) {

      $this->load();
    
      return 1;
      
    } else {
    
      return 0;
      
    }    
      
  }

  /* function delete()
  **
  ** DESCRIPTION: Deletes an entry
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 1 - sucess
  ** 0 - fail
  ** 
  */
  function delete() {
  
		$this->load();
    
    if (!$this->exist()) {
    
      return 0;
      
    }

    
    // Prepare the query
    $query = "DELETE FROM telstra_infotrans_files WHERE file_seq = " . $this->db->quote($this->file_seq);
    $result = $this->db->execute_query($query);

    if ($result == 0) {
    
      return 0;
      
    } else {

      return 1;
      
      
    }
  }

  /* function validate()
  **
  ** DESCRIPTION: validates data currently stored in variables
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** 0 - sucess
  ** 
  */
  function validate() {

    $validate = new validate();

    
    // ALL OK
    return 0;
    
  }

  
  /* function get_last_file_seq()
  **
  ** DESCRIPTION: retrieves all customer details from the table
  **
  ** PARAMETERS:
  ** - none
  **
  ** RETURNS:
  ** - an array containing all the list of customer details
  ** 
  */
  function get_last_file_seq() {
    $query = "SELECT file_seq FROM telstra_infotrans_files ORDER BY file_seq DESC limit 1";
    $result = $this->db->execute_query($query);
      
    if ($result != 0 ) {
	    $row = $this->db->fetch_row_array($result);
	    
	    return $row['file_seq'];
		}
    return 0;
  }


}

